<div style="background-image: url('{{ community.backgroundImage }}');" class="community-banner">
  <div class="container">
    <div class="container-landing-page" style="">
      {% if community %}
        <div class="community well well--pageblock {{ community.colour }}">
          <div class="left">
            <div class="content-item-title content-characteristics content-characteristics-community">
            <span class="content-characteristics-icon">
              {% set themeClass = ckan_mapping_get_theme_class(community.themes[0]) %}
              {% if themeClass %}
                <dd class="icon icon--{{ themeClass }}"></dd>
              {% endif %}
            </span>
              <div>
                <p class="type">{{ 'Community'|t }}</p>
                <h1>{{ community.title }}</h1>
              </div>
            </div>
            <div class="description">
              {% if community.description %}
                {{ community.description }}
              {% endif %}
            </div>
          </div>
          <div class="right">
            {{ form }}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>
