<div class="donl-content-header-block" style="{{ image ? 'background-image: url(' ~ image ~ ')' : '' }}">
  <div class="container">
    <div class="card content-characteristics{{ type ? ' content-characteristics-' ~ type : '' }}">
      <div class="card-content-wrapper content-characteristics-background">
        <div class="detail">
          <div class="content-item-title">
            <span class="content-characteristics-icon"></span>
            <h1>{{ title }}</h1>
          </div>
          {{ content }}
          {{ links }}
        </div>
        <div class="search">
          {{ search_form }}
          {{ suggestions }}
        </div>
      </div>
    </div>
  </div>
</div>

{# Sticky header block. #}
<div class="donl-content-sticky-header-block" style="{{ image ? 'background-image: url(' ~ image ~ ')' : '' }}">
  <div class="card content-characteristics{{ type ? ' content-characteristics-' ~ type : '' }}">
    <div class="card-content-wrapper content-characteristics-background">
      <div class="content-item-title">
        <span class="content-characteristics-icon"></span>
        <h1>{{ title }}</h1>
      </div>
      <div class="search">
        {{ mobile_search_form }}
        <span class="search-toggle">
          {{ source('/themes/custom/koop_overheid/images/icon-search.svg') }}
        </span>
      </div>
    </div>
  </div>
</div>
