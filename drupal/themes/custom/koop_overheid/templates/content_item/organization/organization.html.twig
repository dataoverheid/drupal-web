{% extends '@koop_overheid/content_item/content-item.html.twig' %}
{% import '@koop_overheid/content_item/content-item.html.twig' as content_item %}

{% block content_item %}
  {% set content_item_type = 'organization' %}
  {{ parent() }}
{% endblock content_item %}

{% block content_item_title %}
  {{ content_item.theme_icon() }}
  <div>
    <p class="type">{{ 'Organization'|t }}</p>
    <h1>
      {{ node.title.value }}
      {% if node.organization_type_term.entity.name.value %}({{ node.organization_type_term.entity.name.value }}){% endif %}
    </h1>
    {{ content_item.permalink(url('donl_search.organization.view', {'organization': node.machine_name.0.value})) }}
  </div>
{% endblock content_item_title %}

{% block content_item_description %}
  {% if node.organization_description.value %}
    {{ node.organization_description.value|nl2br }}
  {% endif %}
{% endblock content_item_description %}

{% block content_item_image %}
  {% if node.organisation_logo.entity.fileuri %}
    <img src="{{ file_url(node.organisation_logo.entity.fileuri) }}" alt="Logo {{ node.title.value }}">
  {% endif %}
{% endblock content_item_image %}
