<table class="minimal-table table--striped">
  <tbody>
  <tr>
    <th>{{ 'Result'|t }}</th>
    <td>{{ ckan_get_select_key('datarequest', 'result_datarequest', datarequest.result_datarequest.value) }}</td>
  </tr>
  <tr>
    <th>{{ 'Datarequest source'|t }}</th>
    <td>{{ ckan_get_select_key('datarequest', 'request_source', datarequest.request_source.value) }}</td>
  </tr>
  <tr>
    <th>{{ 'Dataowner'|t }}</th>
    <td>{{ ckan_link_data_owner(datarequest.data_owner.value, ckan_mapping_get_organization_name(datarequest.data_owner.value), 'link') }}</td>
  </tr>
  <tr>
    <th>{{ 'Dataset'|t }}</th>
    <td>
      {% for url in datarequest.relation_datarequest_dataset %}
        {{ get_dataset_link_by_identifier(url.value) }}<br />
      {% endfor %}
    </td>
  </tr>
  <tr>
    <th>{{ 'Latest status of open datarequest'|t }}</th>
    <td>{{ ckan_get_select_key('datarequest', 'state_datarequest', datarequest.state_datarequest.value) }}</td>
  </tr>
  <tr>
    <th>{{ 'Explanation state'|t }}</th>
    <td>{{ datarequest.explanation_state.value|nl2br }}</td>
  </tr>
  <tr>
    <th>{{ 'Join the discussion about this request'|t }}</th>
    <td>{{ ckan_link(datarequest.datarequest_discussion_link.value) }}</td>
  </tr>
  </tbody>
</table>
